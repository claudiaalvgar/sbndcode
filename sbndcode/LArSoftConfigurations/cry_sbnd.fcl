#include "cry.fcl"


BEGIN_PROLOG


sbnd_cry:
{
  
  @table::standard_cry  # from cry.fcl
  SampleTime:           3.2e-3	      # integration time in seconds
  TimeOffset:          -1.7e-3       # time in seconds before a spill to begin the interactions

} # sbnd_cry


END_PROLOG
